@page
@model CadastroCliente_001.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pessoa Física</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PessoaFisica.Id" />
            <div class="form-group">
                <label asp-for="PessoaFisica.Nome" class="control-label" content="Nome"></label>
                <input asp-for="PessoaFisica.Nome" class="form-control" />
                <span asp-validation-for="PessoaFisica.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PessoaFisica.Sobrenome" class="control-label" content="Sobrenome"></label>
                <input asp-for="PessoaFisica.Sobrenome" class="form-control" />
                <span asp-validation-for="PessoaFisica.Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PessoaFisica.DataNascimento" class="control-label" content="Data de Nascimento"></label>
                <input asp-for="PessoaFisica.DataNascimento" class="form-control" />
                <span asp-validation-for="PessoaFisica.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PessoaFisica.Email" class="control-label" content="Email"></label>
                <input asp-for="PessoaFisica.Email" class="form-control" />
                <span asp-validation-for="PessoaFisica.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PessoaFisica.CPF" class="control-label" content="CPF"></label>
                <input asp-for="PessoaFisica.CPF" class="form-control" />
                <span asp-validation-for="PessoaFisica.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PessoaFisica.RG" class="control-label" content="RG"></label>
                <input asp-for="PessoaFisica.RG" class="form-control" />
                <span asp-validation-for="PessoaFisica.RG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" content="Enviar" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
